<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SausageChatClient"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Name="Popup_window" x:Class="SausageChatClient.Window1"
        mc:Ignorable="d"
        Title="Change_Name" Height="182" Width="459" Background="#FF008CFF">
  <Grid HorizontalAlignment="Right" Width="451">
    <Grid.RowDefinitions>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <StackPanel Margin="125,10,136,10">
      <Label HorizontalContentAlignment="Center" x:Name="Enter_name_Label" Content="Enter new name" Foreground="#FFFCFDFF" Background="{x:Null}" Height="30" Margin="0,0,0,7"/>




      <TextBox x:Name="Enter_name_input_box"   HorizontalContentAlignment="Center" Height="28" TextWrapping="Wrap" Margin="0,0,0,6" Background="#FF419EEA" Foreground="#FFFCFDFF" TextChanged="Enter_name_input_box_TextChanged" mah:TextBoxHelper.AutoWatermark="True" mah:TextBoxHelper.HasText="True" mah:TextBoxHelper.IsSpellCheckContextMenuEnabled="True" mah:TextBoxHelper.Watermark="Enter new name here" BorderBrush="#FF008CFF"/>



      <Button x:Name="Set_name_Button" Content="Set Name"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="190" Background="#FF419EEA" BorderBrush="#FFABADB3" Foreground="#FFFCFDFF" Click="Set_name_Button_Click"/>


    </StackPanel>

  </Grid>
</Window>
