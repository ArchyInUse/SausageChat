<Window x:Class="SausageChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="543" Width="800">
  <Grid>

    <Grid.ColumnDefinitions>
      <!-- Define the columns for the grid -->

      <ColumnDefinition Width="*" />
      <!-- The first row.  -->
      <ColumnDefinition Width="*"/>
      <!-- The Second Column  -->
      <ColumnDefinition Width="*" />
      <!-- The third column -->

    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>

      <RowDefinition  Height="auto"/>
      <!-- The First Row -->
      <RowDefinition  Height="*"/>
      <!-- The Second Row -->



    </Grid.RowDefinitions>

    <RichTextBox x:Name="Chat_Box" HorizontalAlignment="Left"  Grid.Column="1"  Height="221" Margin="2,0,0,0" VerticalAlignment="Top" Width="262">
      <!--  The chatbox of where the messages will go.-->
      <FlowDocument>
        <Paragraph>
          <Run Text="Rich Textbox. This will be the message box for the chat. "/>
        </Paragraph>
      </FlowDocument>
    </RichTextBox>
    <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="159" Margin="57,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="144">
      <Button x:Name="Send_message_Button" Content="Send Message" HorizontalAlignment="Left" Height="65" VerticalAlignment="Top" Width="144"/>
      <Button x:Name="Server_Message_Button" Content="Server Message?" HorizontalAlignment="Left" Height="65" VerticalAlignment="Top" Width="144"/>
    </StackPanel>


    <StackPanel Grid.Column="2" HorizontalAlignment="Left" Height="312" VerticalAlignment="Top" Width="135">
      <Button x:Name="Mute_Button" Content="Mute" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="120"/>
      <Button x:Name="Kick_Button" Content="Kick" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="120"/>
      <Button x:Name="Ban_Button" Content="Ban" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.275,1.364"/>
      <Button x:Name="Info_Button" Content="Info" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="120"/>
      <Button Content="info?" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="120"/>
      <Button x:Name="Stop_Server" Content="Stop Server" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="120"/>
      <Button x:Name="Start_server" Content="Start Server" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="120"/>
    </StackPanel>

  </Grid>
</Window>
